{
    "compilerOptions": {
      "module": "CommonJS",               // For Node.js compatibility
      "target": "ES2020",                 // Compatible with modern Node.js
      "moduleResolution": "node",         // Node.js resolution
      "outDir": "./dist/server",          // Output compiled files to `dist/server`
      "rootDir": "./src/server",          // Specify server source directory
      "esModuleInterop": true,            // Interoperability with CommonJS
      "strict": true                      // Enforce strict type checking
    },
    "include": ["src/server/**/*"],        // Include server files
    "exclude": ["node_modules", "dist"]    // Exclude unnecessary files
  }
  