{
    "compilerOptions": {
      "module": "ESNext",
      "target": "ES2020",
      "moduleResolution": "node",
      "outDir": "./dist/server",
      "rootDir": "./src/server",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,
      "verbatimModuleSyntax": true,
      "typeRoots": ["./node_modules/@types"]
    },
    "include": ["src/server/**/*"],
    "exclude": ["node_modules", "dist", "src/frontend/**/*"]
  }
  